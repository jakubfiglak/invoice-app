datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

enum Role {
  USER
  ADMIN
}

model User {
  id             String   @id @default(cuid())
  email          String   @unique
  name           String?
  role           Role     @default(USER)
  avatarUrl      String?
  hashedPassword String
  salt           String
  resetToken     String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
